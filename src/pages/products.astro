---
import Layout from '../layouts/Layout.astro';
import ProductBoard from "../components/ProductBoard.astro"
import { Image } from 'astro:assets'; 
import headphone from "../images/headphone_stand.png";
---

<Layout title="products">
    <main>
        <ul class="link-product-grid">
            <ProductBoard
                title="Headphone Stand"
                product_image={headphone}
                product_description="Desk stand for headphones or a headset."
                price="20"
                stl_file="./scr/stls/headphoneStand.stl"
                href=""
            />
        </ul>
    </main>
</Layout>
<style>
    .link-product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
	}
</style>